<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NormalBtn">
        <item name="android:background">@drawable/normal_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="RadioLinearlayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="RadioTitle">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RadioGroup">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="RadioBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawableLeft">@drawable/selector_radio</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="NormalEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/normal_button</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NormalCheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/selector_checkbox</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
