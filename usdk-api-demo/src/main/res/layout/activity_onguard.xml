<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_load_plain_text_key"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="loadPlainTextKey"
            android:text="loadPlainTextKey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_initKsn"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="initDukptKsn"
            android:text="InitKSN"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fpeCipher"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="fpeCipher"
            android:text="FPECipher"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_sdeCipher"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="sdeCipher"
            android:text="SDECipher"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nextKey"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="nextKey"
            android:text="NextKey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_getKeyKsn"
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="getKeyKsn"
            android:text="GetKeyKsn"
            android:textSize="12sp" />
    </LinearLayout>

    <include layout="@layout/layout_message" />
</LinearLayout>
