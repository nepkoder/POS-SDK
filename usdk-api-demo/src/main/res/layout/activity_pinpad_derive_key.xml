<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="loadPlainTextKey"
            android:text="loadPlainTextKey"
            android:textSize="10sp" />

        <Button
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="loadEncKey"
            android:text="loadEncKey"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="generateKeyMode7"
            android:text="generateKeyMode7"
            android:textSize="10sp" />

        <Button
            style="@style/NormalBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="generateKeyByKeyHandleMode7"
            android:text="generateKeyByKeyHandleMode7"
            android:textSize="10sp" />

    </LinearLayout>

    <include layout="@layout/layout_message" />
</LinearLayout>
