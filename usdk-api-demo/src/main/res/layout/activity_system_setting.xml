<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">
 
    <include layout="@layout/layout_title"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="200dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:imeOptions="actionNext"
					android:layout_height="wrap_content"
					android:text="@string/auto_timezone_enabled" />
				<Switch
					android:id="@+id/autoSwitch"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:layout_marginLeft="20dp"
					android:textOff=""
					android:textOn=""
					android:switchMinWidth="40dp"
					android:thumb="@android:color/transparent"
					android:track="@drawable/selector_switch"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="@string/timezone_list" />

				<org.angmarch.views.NiceSpinner
					android:id="@+id/timeZoneSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="40dp"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getTimeZone"
					android:text="getTimeZone"
					style="@style/NormalBtn"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="setTimeZone"
					android:text="setTimeZone"
					style="@style/NormalBtn"/>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/dash_line"
				android:layerType="software" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<org.angmarch.views.NiceSpinner
					android:id="@+id/hourSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="40dp"
					/>
				<org.angmarch.views.NiceSpinner
					android:id="@+id/minuteSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="40dp"
					/>
				<org.angmarch.views.NiceSpinner
					android:id="@+id/secondSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="40dp"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="setSelfExamTime"
					android:text="setSelfExamTime"
					style="@style/NormalBtn"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getSelfExamTime"
					android:text="getSelfExamTime"
					style="@style/NormalBtn"/>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/dash_line"
				android:layerType="software" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="@string/screen_timeout_list" />

				<org.angmarch.views.NiceSpinner
					android:id="@+id/screenTimeoutSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="40dp"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="setScreenTimeout"
					android:text="setScreenTimeout"
					style="@style/NormalBtn"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getScreenTimeout"
					android:text="getScreenTimeout"
					style="@style/NormalBtn"/>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/dash_line"
				android:layerType="software" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="@string/language_list" />

				<org.angmarch.views.NiceSpinner
					android:id="@+id/languageSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="40dp"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getLanguageList"
					android:text="getLanguageList"
					style="@style/NormalBtn"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="setSystemLanguage"
					android:text="setSystemLanguage"
					style="@style/NormalBtn"/>
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/dash_line"
				android:layerType="software" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:text="@string/ime_list" />

				<org.angmarch.views.NiceSpinner
					android:id="@+id/imeSpinner"
					android:layout_margin="2dp"
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="40dp"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getCurrentIME"
					android:text="getCurrentIME"
					style="@style/NormalBtn"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="getInstalledIMEList"
					android:text="getInstalledIMEList"
					style="@style/NormalBtn"
					android:textSize="12sp"/>
				<Button
					android:layout_width="0dp"
					android:layout_weight="1"
					android:onClick="setCurrentIME"
					android:text="setCurrentIME"
					style="@style/NormalBtn"/>
			</LinearLayout>

		</LinearLayout>
	</ScrollView>

    <include layout="@layout/layout_message"/>
</LinearLayout>
